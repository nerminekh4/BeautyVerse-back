{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "Content": {
      "type": "blocks"
    },
    "Image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "like_count": {
      "type": "biginteger",
      "default": "0"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "subreddit": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subreddit.subreddit"
    },
    "post": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::comment.comment",
      "inversedBy": "likers"
    },
    "likes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts_liked"
    }
  }
}
